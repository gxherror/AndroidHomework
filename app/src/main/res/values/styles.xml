<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="HelloTabStyle" parent="Base.Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/black</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabIndicatorFullWidth">false</item>
        <item name="tabIndicatorGravity">bottom</item>
        <item name="tabGravity">center</item>
    </style>

    <style name="HelloTabStyle.Text" parent="Base.Widget.Design.TabLayout">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Widget.Homework.AppWidget.Container" parent="android:Widget">
        <item name="android:id">@android:id/background</item>
        <item name="android:background">?android:attr/colorBackground</item>
    </style>

    <style name="Widget.Homework.AppWidget.InnerView" parent="android:Widget">
        <item name="android:background">?android:attr/colorBackground</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>


    <declare-styleable name="ProgressView">
        <attr name="line_width" format="dimension"/>
        <attr name="line_color" format="color"/>
    </declare-styleable>

    <declare-styleable name="ProgressCircleView">
        <attr name="radius" format="dimension"/>
    </declare-styleable>

</resources>